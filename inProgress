                                        {
                                            rAbilityCD = rAbilityMaxCD;
                                            spiritsHelp -= rAbilityRequirement;
                                            enemyHP -= rAbilityDmg;
                                            isSecondTurnActive = true;
                                            Console.ForegroundColor = ConsoleColor.Magenta;
                                            Console.WriteLine($"{playerChamp} использует  {rAbility} и тратит {rAbilityRequirement} духов {rAbility}. {rAbility} нельзя использовать в течении {rAbilityCD}");
                                            Console.ForegroundColor = ConsoleColor.White;
                                            Console.ForegroundColor = ConsoleColor.Red;
                                            Console.WriteLine($"{rAbility} наносит {rAbilityDmg} урона врагу {enemyChamp}");
                                            Console.ForegroundColor = ConsoleColor.White;
                                            Console.ForegroundColor = ConsoleColor.DarkMagenta;
                                            Console.WriteLine($"Враг {enemyChamp} ОЗ: {enemyHP}");
                                            Console.ForegroundColor = ConsoleColor.White;
                                            Console.ForegroundColor = ConsoleColor.Blue;
                                            Console.WriteLine($"{rAbility} активен на {playerChamp}");
                                            Console.ForegroundColor = ConsoleColor.White;
                                        }
                                    }
                                    else if (spiritsHelp < rAbilityRequirement && rAbilityCD == 0)
                                    {
                                        rAbilityCD = rAbilityMaxCD;
                                        spiritsHelp += rAbilityStacks + 2;
                                        Console.ForegroundColor = ConsoleColor.Blue;
                                        Console.WriteLine($"{playerChamp} использует {rAbility} Потому что духов меньше, чем необходимо ({rAbilityRequirement}) - {rAbilityStacks + 2} из {stacks} духов получено. Получено: {spiritsHelp}. {rAbility} нельзя использовать в течении {rAbilityCD}");
                                        Console.ForegroundColor = ConsoleColor.White;

                                    }
                                    else if (rAbilityCD > 0)
                                    {
                                        spiritsHelp += 1;
                                        Console.ForegroundColor = ConsoleColor.Blue;
                                        Console.WriteLine($"{playerChamp} использует {rAbility} нельзя использовать ({rAbilityCD} раундов осталось) {rAbilityStacks - 1} духов {stacks} получено. Хотя бы что-то, верно? Всего духов: {spiritsHelp}. Иельзя использовать по-прежнему в течении {rAbilityCD}");
                                        Console.ForegroundColor = ConsoleColor.White;
                                    }
                                    break;
                            }
                        }
                        else if (playerChamp == "Azir")
                        {
                            switch (abilitySelection)
                            {
                                default:
                                    Console.WriteLine("Умение не найдено. Вы пропускаете свой ход");
                                    break;
                                case "q":
                                    break;
                                case "w":
                                    break;
                                case "e":
                                    break;
                                case "r":
                                    break;
