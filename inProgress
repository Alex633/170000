                        {
                            case "Ahri":
                                Console.WriteLine(ahriAbilitiesEN);
                                break;
                            case "Azir":
                                Console.WriteLine(azirAbilitiesEN);
                                break;
                        }
                        Console.ForegroundColor = ConsoleColor.Yellow;
                        Console.WriteLine("Выбрать чемпиона (y or n)?");
                        Console.ForegroundColor = ConsoleColor.White;
                        lockIn = Console.ReadLine();
                        if (lockIn == "y")
                        {
                            isChampSelected = true;
                        }
                    }

                    enemyChamp = "Azir";
                    Console.WriteLine($"Ваш соперник {enemyChamp}");

                    Console.Clear();

                    while (enemyHP > 0 && playerHP > 0)
                    {
                        Random random = new Random();
                        enemyAbility = random.Next(1, 5);

                        //first intro
                        if (round == 0)
                        {
                            Console.ForegroundColor = ConsoleColor.Cyan;
                            round++;
                            Console.WriteLine($"Добро пожаловать в ущелье призывателей");
                            Console.WriteLine($"Раунд {round}");
                            Console.ForegroundColor = ConsoleColor.DarkBlue;
                            Console.WriteLine($"Ваши ОЗ: {playerHP}");
                            Console.ForegroundColor = ConsoleColor.DarkMagenta;
                            Console.WriteLine($"Враг: {enemyChamp} ОЗ: {enemyHP}");
                            Console.ForegroundColor = ConsoleColor.White;
                        }

                        Console.WriteLine(playerAbilities);
                        Console.ForegroundColor = ConsoleColor.Yellow;
                        Console.WriteLine("\nВыберите умение:");
                        Console.ForegroundColor = ConsoleColor.White;
                        abilitySelection = Console.ReadLine();
                        Console.Clear();

                        if (playerHP <= 0)
                        {
                            Console.ForegroundColor = ConsoleColor.Cyan;
                            Console.WriteLine("Вы умираете. Только не это...");
                            Console.ForegroundColor = ConsoleColor.White;
                            break;
                        }

                        //player turn
                        Console.ForegroundColor = ConsoleColor.Blue;
                        Console.WriteLine("История:");
                        Console.ForegroundColor = ConsoleColor.White;
                        if (playerChamp == "Ahri")
                        {
                            switch (abilitySelection)
                            {
                                default:
                                    Console.WriteLine("Умение не найдено. Вы пропускаете ход, Ника");
                                    break;
                                case "q":
                                    if (isCharmActive == true && spiritsHelp >= 2)
                                    {
                                        playerHP += (qAbilityDmg1 * eAbilityMP) * 2;
                                        if (playerHP > ahriHP)
                                        {
                                            playerHP = ahriHP;
                                        }

                                        Console.ForegroundColor = ConsoleColor.DarkGreen;
                                        Console.WriteLine($"{qAbility} лечит {(qAbilityDmg1 * eAbilityMP)} (Потому что {eAbility} активно.)");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        Console.ForegroundColor = ConsoleColor.DarkBlue;
                                        Console.WriteLine($"Ваше ОЗ: {playerHP}");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        playerHP += (qAbilityDmg2 * eAbilityMP) * 2;
                                        if (playerHP > ahriHP)
                                        {
                                            playerHP = ahriHP;
                                        }
                                        spiritsHelp -= qAbilityStacks;

                                        Console.ForegroundColor = ConsoleColor.DarkGreen;
                                        Console.WriteLine($"{qAbility} лечит {(qAbilityDmg2 * eAbilityMP)} (Потому что {eAbility} активно)");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        Console.ForegroundColor = ConsoleColor.DarkBlue;
                                        Console.WriteLine($"Ваши ОЗ: {playerHP}");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        Console.ForegroundColor = ConsoleColor.Magenta;
                                        Console.WriteLine($"{qAbilityStacks} духов {stacks} потрачено. Всего духов: {spiritsHelp}");
                                        Console.ForegroundColor = ConsoleColor.White;
                                    }
                                    else if (isCharmActive == true)
                                    {
                                        spiritsHelp += qAbilityStacks;
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        enemyHP -= qAbilityDmg1 * eAbilityMP;
                                        Console.WriteLine($"{qAbility} наносит {qAbilityDmg1 * eAbilityMP} урона врагу {enemyChamp} (Потому что {eAbility} активно.");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        Console.ForegroundColor = ConsoleColor.DarkMagenta;
                                        Console.WriteLine($"Враг {enemyChamp} ОЗ: {enemyHP}");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        enemyHP -= qAbilityDmg2 * eAbilityMP;
                                        Console.WriteLine($"{qAbility} наносит {qAbilityDmg2 * eAbilityMP} урона врагу {enemyChamp} (Потому что {eAbility} активно.");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        Console.ForegroundColor = ConsoleColor.DarkMagenta;
                                        Console.WriteLine($"Враг {enemyChamp} ОЗ: {enemyHP}");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        Console.ForegroundColor = ConsoleColor.Blue;
                                        Console.WriteLine($"{qAbilityStacks} духов {stacks} получено. Всего духов: {spiritsHelp}");
                                        Console.ForegroundColor = ConsoleColor.White;
                                    }
                                    else if (spiritsHelp >= 2)
                                    {
                                        playerHP += qAbilityDmg1 * 2;
                                        if (playerHP > ahriHP)
                                        {
                                            playerHP = ahriHP;
                                        }

                                        Console.ForegroundColor = ConsoleColor.Green;
                                        Console.WriteLine($"{qAbility} лечит {qAbilityDmg1}.");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        Console.ForegroundColor = ConsoleColor.DarkBlue;
                                        Console.WriteLine($"Ваше ОЗ: {playerHP}");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        playerHP += qAbilityDmg2 * 2;
                                        if (playerHP > ahriHP)
                                        {
                                            playerHP = ahriHP;
                                        }
                                        spiritsHelp -= qAbilityStacks;

                                        Console.ForegroundColor = ConsoleColor.Green;
                                        Console.WriteLine($"{qAbility} лечит {qAbilityDmg2}.");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        Console.ForegroundColor = ConsoleColor.DarkBlue;
                                        Console.WriteLine($"Ваше ОЗ: {playerHP}");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        Console.ForegroundColor = ConsoleColor.Magenta;
                                        Console.WriteLine($"{qAbilityStacks} духов {stacks} потрачено. Всего духов: {spiritsHelp}");
                                        Console.ForegroundColor = ConsoleColor.White;
                                    }
                                    else
                                    {
                                        spiritsHelp += qAbilityStacks;
                                        Console.ForegroundColor = ConsoleColor.Red;
                                        enemyHP -= qAbilityDmg1;
                                        Console.WriteLine($"{qAbility} наносит {qAbilityDmg1} урона врагу {enemyChamp}.");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        Console.ForegroundColor = ConsoleColor.DarkMagenta;
                                        Console.WriteLine($"Враг {enemyChamp} ОЗ: {enemyHP}");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        Console.ForegroundColor = ConsoleColor.Red;
                                        enemyHP -= qAbilityDmg2;
                                        Console.WriteLine($"{qAbility} наносит {qAbilityDmg2} урона врагу {enemyChamp}.");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        Console.ForegroundColor = ConsoleColor.DarkMagenta;
                                        Console.WriteLine($"Враг {enemyChamp} ОЗ: {enemyHP}");
                                        Console.ForegroundColor = ConsoleColor.White;

                                        Console.ForegroundColor = ConsoleColor.Blue;
                                        Console.WriteLine($"{qAbilityStacks} духов {stacks} получено. Всего духов: {spiritsHelp}");
                                        Console.ForegroundColor = ConsoleColor.White;
                                    }
