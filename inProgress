                                                Console.WriteLine($"{enemyChamp} использует {rAbilityEnemy} но потом он понимает, что у него не достаточно солдат, чтобы использовать {rAbilityEnemy} ({rAbilityRequirementEnemy} требуется солдат). " +
                                                    $"Поэтому он передумывает и использует {qAbilityEnemy}");
                                                if (soldiers >= 1)
                                                {
                                                    playerHP -= qAbilityDmgEnemy * soldiers;
                                                    Console.ForegroundColor = ConsoleColor.Red;
                                                    Console.WriteLine($"His {qAbilityEnemy} наносит {qAbilityDmgEnemy * soldiers} урона {playerChamp}. Потому что у него {soldiers} солдат");
                                                    Console.ForegroundColor = ConsoleColor.White;
                                                    Console.ForegroundColor = ConsoleColor.DarkBlue;
                                                    Console.WriteLine($"Ваши ОЗ: {playerHP}");
                                                    Console.ForegroundColor = ConsoleColor.White;
                                                }
                                                else
                                                {
                                                    isAzirDepressed = true;
                                                    Console.ForegroundColor = ConsoleColor.Red;
                                                    Console.WriteLine($"Но потом он понимает, что для этого у него также не достаточно солдат. Возможно сегодня просто не его день. Он впадает в депрессию и пропускает свой ход");
                                                    Console.ForegroundColor = ConsoleColor.White;
                                                    Console.ForegroundColor = ConsoleColor.DarkBlue;
                                                    Console.WriteLine($"Ваши ОЗ: {playerHP}");
                                                    Console.ForegroundColor = ConsoleColor.White;
                                                }
                                                break;
