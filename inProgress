            string azirAbilitiesEN = "Azir abilities:" +
                            "\n(Q) CONQUERING SANDS: All soldiers deal 8 damage" +
                            "\n(W) ARISE!: Summon a Soldier" +
                            "\n(E) SHIFTING SANDS: Atleast 1 soldier has to be on the battle. Heals for 10 damage. All soldiers deal 4 damage. Can't be used next 3 rounds" +
                            "\n(R) EMPEROR'S DEVIDE: Deal 10 damage. Stun enemy for 2 rounds" +
                            "\n\nBUT AZIR IS NOT READY SO DON'T PICK HIM OR YOU'll BREAK EVERYTHING\n";


            //player abilities
            string qAbility = "";
            string wAbility = "";
            string eAbility = "";
            string rAbility = "";
            string stacks = "";

            int qAbilityDmg1 = 2;
            int qAbilityDmg2 = 5;
            int wAbilityDmg = 7;
            int eAbilityMP = 3;
            int rAbilityDmg = 20;
            int rAbilityHeal = 1;

            //player effects
            bool isFoxFireActive = false;
            bool isCharmActive = false;
            bool isSecondTurnActive = false;
            int qAbilityStacks = 2;
            int spiritsHelp = 0;
            int rAbilityRequirement = 5;
            int rAbilityStacks = 2;
            int rAbilityCD = 0;
            int rAbilityMaxCD = 4;
            int wTimer = 0;
            int eTimer = 0;

            //player stats and abilities naming
            playerHP = ahriHP;
            qAbility = "ORB OF DECEPTION (Q)";
            wAbility = "FOX FIRE (W)";
            eAbility = "CHARM (E)";
            rAbility = "SPIRIT RUSH (R)";
            stacks = "SPIRIT'S HELP";

            //enemy abilities
            string qAbilityEnemy = "";
            string wAbilityEnemy = "";
            string eAbilityEnemy = "";
            string rAbilityEnemy = "";

            int qAbilityDmgEnemy = 7;
            int rAbilityDmgEnemy = 11;

            //enemy effects
            int eAbilityRequirmentEnemy = 1;
            int eAbilityMaxCD = 6;
            int eAbilityCDEnemy = 0;
            int soldiers = 1;
            int shurimaPower = 1;
            int rAbilityRequirementEnemy = 3;
            bool isAzirDepressed = false;
            int rAbilityHealEnemy = 40;
            int healThreshold = 67;

            //enemy stats and abilities naming
            enemyHP = azirHP;
            qAbilityEnemy = "CONQUERING SANDS (Q)";
            wAbilityEnemy = "ARISE (W)";
            eAbilityEnemy = "SHIFTING SANDS (E)";
            rAbilityEnemy = "EMPEROR'S DEVIDE (R)";



            string ahriAbilitiesEN = "\nAhri abilities:\n\n" +
                            qAbility + ":\n" +
                            "Ahri sends her orb in the target direction, dealing " + qAbilityDmg1 + " damage to enemy within its path. At maximum range, the orb homes back to Ahri, dealing " + qAbilityDmg2 + " damage to enemies hit on its way back. " +
                            "Ahri gains " + qAbilityStacks + " stacks of " + stacks + ". " +
                            "If Ahri have atleast " + qAbilityStacks + " stack of " + stacks + " she consumes it and instead of doing damage heals herself for " + qAbilityDmg1 + " + " + qAbilityDmg2 + " HP.\n\n" +
                            wAbility + ":\n" +
                            "Ahri conjures three flames which orbit her clockwise. Next round, each flame targets an enemy dealing " + wAbilityDmg + " damage. Ahri gains a stack of " + stacks + ".\n\n" +
                            eAbility + ":\n" +
                            "Ahri blows forth a kiss in the target direction that charming enemy for next round (making enemy take " + eAbilityMP + "x damage). While charm is active she also heals " + eAbilityMP + "x more effective \n\n" +
                            rAbility + ":\n" +
                            "If Ahri have atleast " + rAbilityRequirement + " stacks of " + stacks + " active " + " Ahri consumes them to dashe to the target location and fires essence bolt " +
                            "that deals " + rAbilityDmg + " damage. Then she dashes away from the enemy and makes him skips his turn and heals for " + rAbilityMaxCD + " rounds for " + rAbilityHeal +
                            " HP. If Ahri doesn't have " + rAbilityRequirement + " stacks of " + stacks + " she gains " + rAbilityStacks + 2 + " stacks of " + stacks + " and heals you for the same amount. Cooldown: " + rAbilityMaxCD + " rounds. ";
            string ahriAbilitiesRU = "\nНавыки Ари:\n\n" +
                            qAbility + ":\n" +
                            "Ари отправляет сферу во врага, которая наносит " + qAbilityDmg1 + " урона. Затем сфера возвращается назад, нанося " + qAbilityDmg2 + " урона по пути назад " +
                            "Ари получает" + qAbilityStacks + "заряда " + stacks + ". " +
                            "Если у ари есть хотя бы " + qAbilityStacks + " заряда " + stacks + " она поглощает заряд и вместо нанесения урона исцеляет себя на " + qAbilityDmg1 * 2 + " + " + qAbilityDmg2 * 2 + " очков здоровья.\n\n" +
                            wAbility + ":\n" +
                            "Ари подчиняет три духа огня. В следующем раунде каждый дух наносит " + wAbilityDmg + " урона. " + "Ари получает заряд " + stacks + ".\n\n" +
                            eAbility + ":\n" +
                            "Ари отправляет воздушный поцелуй в сторону врага, который соблазняет его и ослабляет на протяжении следующего раунда (противник получает в" + eAbilityMP + "больше урона).\n\n" +
                            rAbility + ":\n" +
                            "Если у Ари есть хотя бы " + rAbilityRequirement + " заряда " + stacks + " в наличии " + " Ари поглащает их чтобы броситься на врага и выстрелить огненным болтом " +
                            "наносящим " + rAbilityDmg + " урона. Затем отпрыгивает на большое расстояние от врага и заставляет его пропустить свой ход. " +
                            "Если у Ари нет " + rAbilityRequirement + " зарядов" + stacks + "она получает " + rAbilityStacks + " заряда " + stacks + ".";

            playerAbilities = ahriAbilitiesEN;

            //language
            while (isLocalizationSelected != true)
            {
                Console.WriteLine($"Choose language:\n" +
                    $"1. English\n" +
                    $"2. Russian.");
                localization = Convert.ToInt32(Console.ReadLine());
                if (localization == 1 || localization == 2)
                {
                    isLocalizationSelected = true;
                }
                if (isLocalizationSelected != true)
                {
                    Console.WriteLine("This language is still in the development. Select one listed before.");
                }
                Console.Clear();
            }


            if (localization == 1)
            {
                Console.ForegroundColor = ConsoleColor.Cyan;
                string love = "Nika";
                Console.WriteLine($"Welcome, {love}\n");
                Console.ForegroundColor = ConsoleColor.White;

                //champion select
                while (isChampSelected != true)
                {
                    Console.WriteLine("Select your champion:" +
                        "\n1. Ahri" +
                        "\n2. Azir");

                    champSelection = Convert.ToInt32(Console.ReadLine());
                    switch (champSelection)
                    {
                        case 1:
                            playerChamp = "Ahri";
                            break;
                        case 2:
                            playerChamp = "Azir";
                            break;
                        default:
                            Console.WriteLine("Error 404. Champion not Found. Close the Program");
                            break;
                    }

                    switch (playerChamp)
                    {
                        case "Ahri":
                            Console.WriteLine(ahriAbilitiesEN);
                            break;
                        case "Azir":
                            Console.WriteLine(azirAbilitiesEN);
                            break;
                    }
                    Console.ForegroundColor = ConsoleColor.Yellow;
                    Console.WriteLine("\nLock in your champion (y or n)?");
                    Console.ForegroundColor = ConsoleColor.White;
                    lockIn = Console.ReadLine();
                    if (lockIn == "y")
                    {
                        isChampSelected = true;
                    }
                }

                enemyChamp = "Azir";
                Console.WriteLine($"Your opponent is {enemyChamp}");

                Console.Clear();

                while (enemyHP > 0 && playerHP > 0)
                {
                    Random random = new Random();
                    enemyAbility = random.Next(1, 5);

                    //first intro
                    if (round == 0)
                    {
                        Console.ForegroundColor = ConsoleColor.Cyan;
                        round++;
                        Console.WriteLine($"WELCOME TO THE SUMMONERS RIFT");
                        Console.WriteLine($"Round {round}");
                        Console.ForegroundColor = ConsoleColor.DarkBlue;
                        Console.WriteLine($"Ваши очки здоровья: {playerHP}");
                        Console.ForegroundColor = ConsoleColor.DarkMagenta;
                        Console.WriteLine($"Enemy {enemyChamp} HP: {enemyHP}");
                        Console.ForegroundColor = ConsoleColor.White;
                    }

                    Console.WriteLine(playerAbilities);
                    Console.ForegroundColor = ConsoleColor.Yellow;
                    Console.WriteLine("\nSelect Ability:");
                    Console.ForegroundColor = ConsoleColor.White;
                    abilitySelection = Console.ReadLine();
                    Console.Clear();

                    if (playerHP <= 0)
                    {
                        Console.ForegroundColor = ConsoleColor.Cyan;
                        Console.WriteLine("You are dying. Oh no");
                        Console.ForegroundColor = ConsoleColor.White;
                        break;
                    }

                    //player turn
                    Console.ForegroundColor = ConsoleColor.Blue;
                    Console.WriteLine("Your Feed:");
                    Console.ForegroundColor = ConsoleColor.White;
                    if (playerChamp == "Ahri")
                    {
                        switch (abilitySelection)
                        {
                            default:
                                Console.WriteLine("Ability not found. You skipping your turn");
                                break;
                            case "q":
                                if (isCharmActive == true && spiritsHelp >= 2)
                                {
                                    playerHP += (qAbilityDmg1 * eAbilityMP) * 2;
                                    if (playerHP > ahriHP)
                                    {
                                        playerHP = ahriHP;
                                    }

                                    Console.ForegroundColor = ConsoleColor.DarkGreen;
                                    Console.WriteLine($"{qAbility} heals {(qAbilityDmg1 * eAbilityMP)}. Because {eAbility} is active.");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    Console.ForegroundColor = ConsoleColor.DarkBlue;
                                    Console.WriteLine($"Ваши очки здоровья: {playerHP}");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    playerHP += (qAbilityDmg2 * eAbilityMP) * 2;
                                    if (playerHP > ahriHP)
                                    {
                                        playerHP = ahriHP;
                                    }
                                    spiritsHelp -= qAbilityStacks;

                                    Console.ForegroundColor = ConsoleColor.DarkGreen;
                                    Console.WriteLine($"{qAbility} heals {(qAbilityDmg2 * eAbilityMP)}. Because {eAbility} is active.");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    Console.ForegroundColor = ConsoleColor.DarkBlue;
                                    Console.WriteLine($"Ваши очки здоровья: {playerHP}");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    Console.ForegroundColor = ConsoleColor.Magenta;
                                    Console.WriteLine($"{qAbilityStacks} stacks of {stacks} is spend. Total stacks: {spiritsHelp}");
                                    Console.ForegroundColor = ConsoleColor.White;
                                }
                                else if (isCharmActive == true)
                                {
                                    spiritsHelp += qAbilityStacks;
                                    Console.ForegroundColor = ConsoleColor.DarkRed;
                                    enemyHP -= qAbilityDmg1 * eAbilityMP;
                                    Console.WriteLine($"{qAbility} deals {qAbilityDmg1 * eAbilityMP} damage to enemy {enemyChamp}. Because {eAbility} is active.");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    Console.ForegroundColor = ConsoleColor.DarkMagenta;
                                    Console.WriteLine($"Enemy {enemyChamp} HP: {enemyHP}");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    Console.ForegroundColor = ConsoleColor.DarkRed;
                                    enemyHP -= qAbilityDmg2 * eAbilityMP;
                                    Console.WriteLine($"{qAbility} deals {qAbilityDmg2 * eAbilityMP} damage to enemy {enemyChamp}. Because {eAbility} is active.");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    Console.ForegroundColor = ConsoleColor.DarkMagenta;
                                    Console.WriteLine($"Enemy {enemyChamp} HP: {enemyHP}");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    Console.ForegroundColor = ConsoleColor.Blue;
                                    Console.WriteLine($"{qAbilityStacks} stacks of {stacks} is gained. Total stacks: {spiritsHelp}");
                                    Console.ForegroundColor = ConsoleColor.White;
                                }
                                else if (spiritsHelp >= 2)
                                {
                                    playerHP += qAbilityDmg1 * 2;
                                    if (playerHP > ahriHP)
                                    {
                                        playerHP = ahriHP;
                                    }

                                    Console.ForegroundColor = ConsoleColor.Green;
                                    Console.WriteLine($"{qAbility} heals {qAbilityDmg1}.");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    Console.ForegroundColor = ConsoleColor.DarkBlue;
                                    Console.WriteLine($"Ваши очки здоровья: {playerHP}");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    playerHP += qAbilityDmg2 * 2;
                                    if (playerHP > ahriHP)
                                    {
                                        playerHP = ahriHP;
                                    }
                                    spiritsHelp -= qAbilityStacks;

                                    Console.ForegroundColor = ConsoleColor.Green;
                                    Console.WriteLine($"{qAbility} heals {qAbilityDmg2}.");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    Console.ForegroundColor = ConsoleColor.DarkBlue;
                                    Console.WriteLine($"Ваши очки здоровья: {playerHP}");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    Console.ForegroundColor = ConsoleColor.Magenta;
                                    Console.WriteLine($"{qAbilityStacks} stacks of {stacks} is spend. Total stacks: {spiritsHelp}");
                                    Console.ForegroundColor = ConsoleColor.White;
                                }
                                else
                                {
                                    spiritsHelp += qAbilityStacks;
                                    Console.ForegroundColor = ConsoleColor.Red;
                                    enemyHP -= qAbilityDmg1;
                                    Console.WriteLine($"{qAbility} deals {qAbilityDmg1} damage to enemy {enemyChamp}.");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    Console.ForegroundColor = ConsoleColor.DarkMagenta;
                                    Console.WriteLine($"Enemy {enemyChamp} HP: {enemyHP}");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    Console.ForegroundColor = ConsoleColor.Red;
                                    enemyHP -= qAbilityDmg2;
                                    Console.WriteLine($"{qAbility} deals {qAbilityDmg2} damage to enemy {enemyChamp}.");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    Console.ForegroundColor = ConsoleColor.DarkMagenta;
                                    Console.WriteLine($"Enemy {enemyChamp} HP: {enemyHP}");
                                    Console.ForegroundColor = ConsoleColor.White;

                                    Console.ForegroundColor = ConsoleColor.Blue;
                                    Console.WriteLine($"{qAbilityStacks} stacks of {stacks} is gained. Total stacks: {spiritsHelp}");
                                    Console.ForegroundColor = ConsoleColor.White;
                                }
                                break;
                            case "w":
                                wTimer = round + 1;
                                isFoxFireActive = true;
                                Console.ForegroundColor = ConsoleColor.Blue;
                                Console.WriteLine($"{wAbility} is active on {playerChamp}");
                                Console.ForegroundColor = ConsoleColor.White;
                                break;
                            case "e":
                                eTimer = round + 1;
                                isCharmActive = true;
                                Console.ForegroundColor = ConsoleColor.Magenta;
                                Console.WriteLine($"{eAbility} is active on {enemyChamp}");
                                Console.ForegroundColor = ConsoleColor.White;
                                break;
                            case "r":
                                if (spiritsHelp >= rAbilityRequirement && rAbilityCD == 0)
                                {
                                    if (isCharmActive == true)
                                    {
                                        rAbilityCD = rAbilityMaxCD;
                                        spiritsHelp -= rAbilityRequirement;
                                        enemyHP -= rAbilityDmg * eAbilityMP;
                                        isSecondTurnActive = true;
                                        Console.ForegroundColor = ConsoleColor.Magenta;
                                        Console.WriteLine($"{playerChamp} uses {rAbility} and loses {rAbilityRequirement} stacks of {rAbility}. {rAbility} is on cooldown for {rAbilityCD}");
                                        Console.ForegroundColor = ConsoleColor.White;
                                        Console.ForegroundColor = ConsoleColor.Red;
                                        Console.WriteLine($"{rAbility} deals {rAbilityDmg * eAbilityMP} damage to enemy {enemyChamp}");
                                        Console.ForegroundColor = ConsoleColor.DarkMagenta;
                                        Console.WriteLine($"Enemy {enemyChamp} HP: {enemyHP}");
                                        Console.ForegroundColor = ConsoleColor.White;
                                        Console.ForegroundColor = ConsoleColor.White;
                                        Console.ForegroundColor = ConsoleColor.Blue;
                                        Console.WriteLine($"{rAbility} is active on {playerChamp}");
                                        Console.ForegroundColor = ConsoleColor.White;
                                    }
                                    else
                                    {
                                        rAbilityCD = rAbilityMaxCD;
                                        spiritsHelp -= rAbilityRequirement;
                                        enemyHP -= rAbilityDmg;
                                        isSecondTurnActive = true;
                                        Console.ForegroundColor = ConsoleColor.Magenta;
                                        Console.WriteLine($"{playerChamp} uses {rAbility} and loses {rAbilityRequirement} stacks of {rAbility}. {rAbility} is on cooldown for {rAbilityCD}");
                                        Console.ForegroundColor = ConsoleColor.White;
                                        Console.ForegroundColor = ConsoleColor.Red;
                                        Console.WriteLine($"{rAbility} deals {rAbilityDmg} damage to enemy {enemyChamp}");
                                        Console.ForegroundColor = ConsoleColor.White;
                                        Console.ForegroundColor = ConsoleColor.DarkMagenta;
                                        Console.WriteLine($"Enemy {enemyChamp} HP: {enemyHP}");
                                        Console.ForegroundColor = ConsoleColor.White;
                                        Console.ForegroundColor = ConsoleColor.Blue;
                                        Console.WriteLine($"{rAbility} is active on {playerChamp}");
                                        Console.ForegroundColor = ConsoleColor.White;
                                    }
                                }
                                else if (spiritsHelp < rAbilityRequirement && rAbilityCD == 0)
                                {
                                    rAbilityCD = rAbilityMaxCD;
                                    spiritsHelp += rAbilityStacks + 2;
                                    Console.ForegroundColor = ConsoleColor.Blue;
                                    Console.WriteLine($"{playerChamp} uses {rAbility} Because there is less then {rAbilityRequirement} stacks {rAbilityStacks + 2} of {stacks} is gained. Total stacks: {spiritsHelp}. {rAbility} is on cooldown for {rAbilityCD}");
                                    Console.ForegroundColor = ConsoleColor.White;

                                }
                                else if (rAbilityCD > 0)
                                {
                                    spiritsHelp += 1;
                                    Console.ForegroundColor = ConsoleColor.Blue;
                                    Console.WriteLine($"{playerChamp} uses {rAbility} Because this ability is on cooldown ({rAbilityCD} rounds left) {rAbilityStacks - 1} stack of {stacks} is gained. Atleast something, right? Total stacks: {spiritsHelp}. Cooldown is the same {rAbilityCD}");
                                    Console.ForegroundColor = ConsoleColor.White;
                                }
                                break;
                        }
                    }
                    else if (playerChamp == "Azir")
                    {
                        switch (abilitySelection)
                        {
                            default:
                                Console.WriteLine("Ability not found. You're skipping your turn");
                                break;
                            case "q":
                                break;
                            case "w":
                                break;
                            case "e":
                                break;
                            case "r":
                                break;
                        }
                    }

                    if (enemyHP <= 0)
                    {
                        Console.ForegroundColor = ConsoleColor.Cyan;
                        Console.WriteLine($"{enemyChamp} is holding his last breath");
                        Console.ForegroundColor = ConsoleColor.White;
                        break;
                    }

                    //enemy turn
                    Console.ForegroundColor = ConsoleColor.Cyan;
                    Console.WriteLine("\n\nENEMY TURN:");
                    Console.ForegroundColor = ConsoleColor.White;
                    if (isSecondTurnActive != true)
                    {
                        if (isAzirDepressed)
                        {
                            Console.WriteLine($"{enemyChamp} is stil depressed");
                            isAzirDepressed = false;
                        }
                        else
                        {
                            if (enemyChamp == "Azir")
                            {
                                if (enemyHP <= healThreshold && eAbilityCDEnemy == 0)
                                {
                                    eAbilityCDEnemy = eAbilityMaxCD;
                                    enemyHP += rAbilityHealEnemy;
                                    if (enemyHP > azirHP)
                                    {
                                        enemyHP = azirHP;
                                    }
                                    Console.ForegroundColor = ConsoleColor.Green;
                                    Console.WriteLine($"{enemyChamp} uses {eAbilityEnemy}. He heals for {rAbilityHealEnemy} HP. {eAbilityEnemy} is on cooldown for {eAbilityCDEnemy}");
                                    Console.ForegroundColor = ConsoleColor.White;
                                    Console.ForegroundColor = ConsoleColor.DarkBlue;
                                    Console.WriteLine($"Ваши очки здоровья: {playerHP}");
                                    Console.ForegroundColor = ConsoleColor.White;
                                }
                                else if (soldiers >= rAbilityRequirementEnemy)
                                {
                                    playerHP -= rAbilityDmgEnemy * soldiers;
                                    shurimaPower += 1;
                                    Console.ForegroundColor = ConsoleColor.DarkRed;
                                    Console.WriteLine($"{enemyChamp} uses {rAbilityEnemy} and deals {rAbilityDmgEnemy * soldiers}. That was rough. Azir lost all of his soldier but now he becomes stronger and summons {shurimaPower} soldiers per {wAbilityEnemy}");
                                    Console.ForegroundColor = ConsoleColor.White;
                                    Console.ForegroundColor = ConsoleColor.Blue;
                                    Console.WriteLine($"Your HP: {playerHP}");
                                    Console.ForegroundColor = ConsoleColor.White;
                                    soldiers = 0;
                                }
                                else
                                {
                                    switch (enemyAbility)
                                    {
                                        case 1:
                                            if (soldiers >= 1)
                                            {
                                                playerHP -= qAbilityDmgEnemy * soldiers;
                                                Console.ForegroundColor = ConsoleColor.Red;
                                                Console.WriteLine($"{enemyChamp} uses {qAbilityEnemy} and deals {qAbilityDmgEnemy * soldiers} damage to {playerChamp}. Because there is a {soldiers} soldiers");
                                                Console.ForegroundColor = ConsoleColor.White;
                                                Console.ForegroundColor = ConsoleColor.DarkBlue;
                                                Console.WriteLine($"Your HP: {playerHP}");
                                                Console.ForegroundColor = ConsoleColor.White;
                                            }
                                            else
                                            {
                                                playerHP -= 1;
                                                Console.ForegroundColor = ConsoleColor.Red;
                                                Console.WriteLine($"{enemyChamp} uses {qAbilityEnemy} but then remembers that he doesnt have any soldier. So instead he hits you with his stick and doing 1 damage");
                                                Console.ForegroundColor = ConsoleColor.White;
                                                Console.ForegroundColor = ConsoleColor.DarkBlue;
                                                Console.WriteLine($"Your HP: {playerHP}");
                                                Console.ForegroundColor = ConsoleColor.White;
                                            }
                                            break;
                                        case 2:
                                            soldiers += shurimaPower;
                                            Console.ForegroundColor = ConsoleColor.Blue;
                                            Console.WriteLine($"{enemyChamp} uses {wAbilityEnemy} and summons {shurimaPower} soldier.Now he have {soldiers} soldier(s)");
                                            Console.ForegroundColor = ConsoleColor.White;
                                            break;
                                        case 3:
                                            if (spiritsHelp > 0)
                                            {
                                                spiritsHelp -= 1;
                                                Console.ForegroundColor = ConsoleColor.Magenta;
                                                Console.WriteLine($"Azir says something about shirima. One spirit is got scared and runed away :(. Now you have {spiritsHelp} spirit(s)");
                                                Console.ForegroundColor = ConsoleColor.White;
                                            }
                                            else
                                            {
                                                Console.WriteLine($"Azir says something about shirima. You don't know what to say back");
                                            }
                                            break;
                                        case 4:
                                            Console.ForegroundColor = ConsoleColor.Red;
                                            Console.WriteLine($"{enemyChamp} uses {rAbilityEnemy} but then he realizes that he doesnt have {rAbilityRequirementEnemy} soldiers for him to use {rAbilityEnemy}. " +
                                                $"So he changes his mind and uses {qAbilityEnemy}");
                                            if (soldiers >= 1)
                                            {
                                                playerHP -= qAbilityDmgEnemy * soldiers;
                                                Console.ForegroundColor = ConsoleColor.Red;
                                                Console.WriteLine($"His {qAbilityEnemy} deals {qAbilityDmgEnemy * soldiers} damage to {playerChamp}. Because there is a {soldiers} soldiers");
                                                Console.ForegroundColor = ConsoleColor.White;
                                                Console.ForegroundColor = ConsoleColor.DarkBlue;
                                                Console.WriteLine($"Your HP: {playerHP}");
                                                Console.ForegroundColor = ConsoleColor.White;
                                            }
                                            else
                                            {
                                                isAzirDepressed = true;
                                                Console.ForegroundColor = ConsoleColor.Red;
                                                Console.WriteLine($"But then he realizes that he doesnt have any soldier. I guess it's just not his day. He getting depressed and skips his next turn");
                                                Console.ForegroundColor = ConsoleColor.White;
                                                Console.ForegroundColor = ConsoleColor.DarkBlue;
                                                Console.WriteLine($"Your HP: {playerHP}");
                                                Console.ForegroundColor = ConsoleColor.White;
                                            }
                                            break;
                                    }
                                }
                            }
                        }
                    }
                    else
                    {
                        Console.ForegroundColor = ConsoleColor.Magenta;
                        Console.WriteLine($"{rAbility} is active. Enemy {enemyChamp} skips his turn");
                        Console.ForegroundColor = ConsoleColor.White;
                        if (isAzirDepressed)
                        {
                            Console.WriteLine($"And {enemyChamp} is now even more depressed. Why are you doing this? He skips his next turn. Again.");
                        }
                        isSecondTurnActive = false;
                    }
                    Console.ForegroundColor = ConsoleColor.Cyan;
                    Console.WriteLine($"\nEnd of the round {round}");
                    Console.ForegroundColor = ConsoleColor.White;
                    Console.ForegroundColor = ConsoleColor.Yellow;
                    Console.WriteLine($"Press ENTER to continue");
                    Console.ForegroundColor = ConsoleColor.White;

                    input = Console.ReadLine();
                    Console.Clear();

                    //intro
                    Console.ForegroundColor = ConsoleColor.Cyan;
                    round++;
                    Console.WriteLine($"Round {round}");
                    Console.ForegroundColor = ConsoleColor.DarkBlue;
                    Console.WriteLine($"Your HP: {playerHP}");
                    Console.ForegroundColor = ConsoleColor.White;
                    Console.WriteLine($"Spirits: {spiritsHelp}");
                    Console.ForegroundColor = ConsoleColor.DarkMagenta;
                    Console.WriteLine($"Enemy {enemyChamp} HP: {enemyHP}");
                    Console.ForegroundColor = ConsoleColor.White;
                    Console.WriteLine($"Soldiers: {soldiers}");

                    //effect time out
                    if (wTimer != round)
                    {
                        isFoxFireActive = false;
                    }
                    if (eTimer != round)
                    {
                        isCharmActive = false;
                    }

                    //Over time effects
                    if (isFoxFireActive == true)
                    {
                        Console.ForegroundColor = ConsoleColor.Cyan;
                        Console.WriteLine("\n\nEFFECTS STAGE");
                        Console.ForegroundColor = ConsoleColor.White;

                        Console.ForegroundColor = ConsoleColor.Red;
                        enemyHP -= wAbilityDmg;
                        Console.WriteLine($"{wAbility} deals {wAbilityDmg} damage to {enemyChamp}");
                        Console.ForegroundColor = ConsoleColor.White;

                        Console.ForegroundColor = ConsoleColor.DarkMagenta;
                        Console.WriteLine($"{enemyChamp} HP: {enemyHP}");
                        Console.ForegroundColor = ConsoleColor.White;

                        Console.ForegroundColor = ConsoleColor.Red;
                        enemyHP -= wAbilityDmg;
                        Console.WriteLine($"{wAbility} deals {wAbilityDmg} damage to {enemyChamp}");
                        Console.ForegroundColor = ConsoleColor.White;

                        Console.ForegroundColor = ConsoleColor.DarkMagenta;
                        Console.WriteLine($"{enemyChamp} HP: {enemyHP}");
                        Console.ForegroundColor = ConsoleColor.White;

                        Console.ForegroundColor = ConsoleColor.Red;
                        enemyHP -= wAbilityDmg;
                        Console.WriteLine($"{wAbility} deals {wAbilityDmg} damage to {enemyChamp}");
                        Console.ForegroundColor = ConsoleColor.White;

                        spiritsHelp += 1;
                        Console.ForegroundColor = ConsoleColor.Blue;
                        Console.WriteLine($"Stack of {stacks} is gained. Total stacks: {spiritsHelp}");
                        Console.ForegroundColor = ConsoleColor.White;

                        Console.ForegroundColor = ConsoleColor.DarkMagenta;
                        Console.WriteLine($"{enemyChamp} HP: {enemyHP}");
                        Console.ForegroundColor = ConsoleColor.White;
                    }

                    Console.WriteLine("\n\n");


                    //cooldowns
                    if (eAbilityCDEnemy > 0)
                    {
                        eAbilityCDEnemy--;
                        if (eAbilityCDEnemy == 0)
                        {
                            Console.ForegroundColor = ConsoleColor.Magenta;
                            Console.WriteLine($"{eAbilityEnemy} is ready");
                            Console.ForegroundColor = ConsoleColor.White;
                        }
                        else
                        {
                            Console.WriteLine($"{enemyChamp}'s {eAbilityEnemy} cooldown: {eAbilityCDEnemy} left");
                        }

                    }
                    if (rAbilityCD > 0)
                    {
                        rAbilityCD--;
                        if (rAbilityCD == 0)
                        {
                            Console.ForegroundColor = ConsoleColor.Blue;
                            Console.WriteLine($"{rAbility} is ready");
                            Console.ForegroundColor = ConsoleColor.White;
                        }
                        else
                        {
                            Console.WriteLine($"Your {rAbility} cooldown: {rAbilityCD} left");
                        }
                    }
                    if (rAbilityCD > 0)
                    {
                        playerHP += rAbilityHeal;
                        if (playerHP > ahriHP)
                        {
                            playerHP = ahriHP;
                        }
                        Console.ForegroundColor = ConsoleColor.Green;
                        Console.WriteLine($"{rAbility} heals you for {rAbilityHeal}");
                        Console.ForegroundColor = ConsoleColor.White;
                    }
                    if (isCharmActive)
                    {
                        Console.ForegroundColor = ConsoleColor.Magenta;
                        Console.WriteLine($"{enemyChamp} is Charmed");
                        Console.ForegroundColor = ConsoleColor.White;
                    }
                    if (playerHP <= 0)
                    {
                        Console.ForegroundColor = ConsoleColor.Cyan;
                        Console.WriteLine("You are dying. Oh no");
                        Console.ForegroundColor = ConsoleColor.White;
                    }
                    if (enemyHP <= 0)
                    {
                        Console.ForegroundColor = ConsoleColor.Cyan;
                        Console.WriteLine($"{enemyChamp} is holding his last breath");
                        Console.ForegroundColor = ConsoleColor.White;
                    }
                }
            }

            Console.Clear();
            if (enemyHP <= 0 && playerHP <= 0)
            {
                Console.BackgroundColor = ConsoleColor.DarkYellow;
                Console.WriteLine("Everybody Dead. What have we done...");
                Console.BackgroundColor = ConsoleColor.Black;
            }
            else if (playerHP <= 0)
            {
                
                Console.BackgroundColor = ConsoleColor.DarkRed;
                Console.WriteLine($"Enemy {enemyChamp} has won the battle");
                Console.BackgroundColor = ConsoleColor.Black;
            }
            else if (enemyHP <= 0)
            {
                Console.BackgroundColor = ConsoleColor.DarkBlue;
                Console.WriteLine("You Won");
                Console.BackgroundColor = ConsoleColor.Black;
            }
            else if (localization == 2)
            {
                //russian ------------------------------------------------------------------------
                //--------------------------------------------------------------------------------
                {
                    Console.ForegroundColor = ConsoleColor.Cyan;
                    string love = "Nika";
                    Console.WriteLine($"Добро пожаловать, {love}\n");
                    Console.ForegroundColor = ConsoleColor.White;

                    //champion select
                    while (isChampSelected != true)
                    {
                        Console.WriteLine("Выберите чемпиона:" +
                            "\n1. Ahri" +
                            "\n2. Azir");

                        champSelection = Convert.ToInt32(Console.ReadLine());
                        switch (champSelection)
                        {
                            case 1:
                                playerChamp = "Ahri";
                                break;
                            case 2:
                                playerChamp = "Azir";
                                break;
                            default:
                                Console.WriteLine("Ошибка 404. Чемпион не найден. Закройте программу");
                                break;
