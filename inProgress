                                    }
                                }
                            }
                        }
                        else
                        {
                            Console.ForegroundColor = ConsoleColor.Magenta;
                            Console.WriteLine($"{rAbility} активно. Враг {enemyChamp} пропускает свой ход");
                            Console.ForegroundColor = ConsoleColor.White;
                            if (isAzirDepressed)
                            {
                                Console.WriteLine($"Теперь {enemyChamp} даже еще сильнее впадает в депрессию. Зачем ты это делаешь? Он пропускает свой ход. Опять.");
                            }
                            isSecondTurnActive = false;
                        }
                        Console.ForegroundColor = ConsoleColor.Cyan;
                        Console.WriteLine($"\nКонец раунда {round}");
                        Console.ForegroundColor = ConsoleColor.White;
                        Console.ForegroundColor = ConsoleColor.Yellow;
                        Console.WriteLine($"наужмите ENTER чтобы продолжить");
                        Console.ForegroundColor = ConsoleColor.White;

                        input = Console.ReadLine();
                        Console.Clear();

                        //intro
                        Console.ForegroundColor = ConsoleColor.Cyan;
                        round++;
                        Console.WriteLine($"Раунд {round}");
                        Console.ForegroundColor = ConsoleColor.DarkBlue;
                        Console.WriteLine($"Ваши ОЗ: {playerHP}");
                        Console.ForegroundColor = ConsoleColor.White;
                        Console.WriteLine($"Духов: {spiritsHelp}");
                        Console.ForegroundColor = ConsoleColor.DarkMagenta;
                        Console.WriteLine($"Враг {enemyChamp} ОЗ: {enemyHP}");
                        Console.ForegroundColor = ConsoleColor.White;
                        Console.WriteLine($"Солдат: {soldiers}");

                        //effect time out
                        if (wTimer != round)
                        {
                            isFoxFireActive = false;
                        }
                        if (eTimer != round)
                        {
                            isCharmActive = false;
                        }

                        //Over time effects
                        if (isFoxFireActive == true)
                        {
                            Console.ForegroundColor = ConsoleColor.Cyan;
                            Console.WriteLine("\n\nСтадия эффектов");
                            Console.ForegroundColor = ConsoleColor.White;

                            Console.ForegroundColor = ConsoleColor.Red;
                            enemyHP -= wAbilityDmg;
                            Console.WriteLine($"{wAbility} наносит {wAbilityDmg} урона {enemyChamp}");
                            Console.ForegroundColor = ConsoleColor.White;

                            Console.ForegroundColor = ConsoleColor.DarkMagenta;
                            Console.WriteLine($"{enemyChamp} ОЗ: {enemyHP}");
                            Console.ForegroundColor = ConsoleColor.White;

                            Console.ForegroundColor = ConsoleColor.Red;
                            enemyHP -= wAbilityDmg;
                            Console.WriteLine($"{wAbility} наносит {wAbilityDmg} урона {enemyChamp}");
                            Console.ForegroundColor = ConsoleColor.White;

                            Console.ForegroundColor = ConsoleColor.DarkMagenta;
                            Console.WriteLine($"{enemyChamp} ОЗ: {enemyHP}");
                            Console.ForegroundColor = ConsoleColor.White;

                            Console.ForegroundColor = ConsoleColor.Red;
                            enemyHP -= wAbilityDmg;
                            Console.WriteLine($"{wAbility} наносит {wAbilityDmg} урона {enemyChamp}");
                            Console.ForegroundColor = ConsoleColor.White;

                            spiritsHelp += 1;
                            Console.ForegroundColor = ConsoleColor.Blue;
                            Console.WriteLine($"духов {stacks} получено. Всего духов: {spiritsHelp}");
                            Console.ForegroundColor = ConsoleColor.White;

                            Console.ForegroundColor = ConsoleColor.DarkMagenta;
                            Console.WriteLine($"{enemyChamp} ОЗ: {enemyHP}");
                            Console.ForegroundColor = ConsoleColor.White;
                        }

                        Console.WriteLine("\n\n");


                        //cooldowns
                        if (eAbilityCDEnemy > 0)
                        {
                            eAbilityCDEnemy--;
                            if (eAbilityCDEnemy == 0)
                            {
                                Console.ForegroundColor = ConsoleColor.Magenta;
                                Console.WriteLine($"{eAbilityEnemy} готов");
                                Console.ForegroundColor = ConsoleColor.White;
                            }
                            else
                            {
                                Console.WriteLine($"{enemyChamp} не может использовать {eAbilityEnemy} еще {eAbilityCDEnemy}");
                            }

                        }
                        if (rAbilityCD > 0)
                        {
                            rAbilityCD--;
                            if (rAbilityCD == 0)
                            {
                                Console.ForegroundColor = ConsoleColor.Blue;
                                Console.WriteLine($"{rAbility} готово");
                                Console.ForegroundColor = ConsoleColor.White;
                            }
                            else
                            {
                                Console.WriteLine($"Ваше {rAbility} нельзя использовать еще {rAbilityCD}");
                            }
                        }
                        if (rAbilityCD > 0)
                        {
                            playerHP += rAbilityHeal;
                            if (playerHP > ahriHP)
                            {
                                playerHP = ahriHP;
                            }
                            Console.ForegroundColor = ConsoleColor.Green;
                            Console.WriteLine($"{rAbility} исцеляет тебя на {rAbilityHeal}");
                            Console.ForegroundColor = ConsoleColor.White;
                        }
                        if (isCharmActive)
                        {
                            Console.ForegroundColor = ConsoleColor.Magenta;
                            Console.WriteLine($"{enemyChamp} очарован");
                            Console.ForegroundColor = ConsoleColor.White;
                        }
                        if (playerHP <= 0)
                        {
                            Console.ForegroundColor = ConsoleColor.Cyan;
                            Console.WriteLine("Вы умираете. Только не это");
                            Console.ForegroundColor = ConsoleColor.White;
                        }
                        if (enemyHP <= 0)
                        {
                            Console.ForegroundColor = ConsoleColor.Cyan;
                            Console.WriteLine($"{enemyChamp} издает свой последний вздох");
                            Console.ForegroundColor = ConsoleColor.White;
                        }
                    }
                }

                Console.Clear();
                if (enemyHP <= 0 && playerHP <= 0)
                {
                    Console.BackgroundColor = ConsoleColor.DarkYellow;
                    Console.WriteLine("Все мертвы. Что мы наделали...");
                    Console.BackgroundColor = ConsoleColor.Black;
                }
                else if (playerHP <= 0)
                {

                    Console.BackgroundColor = ConsoleColor.DarkRed;
                    Console.WriteLine($"Враг {enemyChamp} победил. Ника, как так...");
                    Console.BackgroundColor = ConsoleColor.Black;
                }
                else if (enemyHP <= 0)
                {
                    Console.BackgroundColor = ConsoleColor.DarkBlue;
                    Console.WriteLine("Ты победила. Кто молодец?");
                    Console.BackgroundColor = ConsoleColor.Black;
                }
            }
        }
    }
}
