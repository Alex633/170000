                                                    Console.ForegroundColor = ConsoleColor.White;
                                                }
                                                break;
                                            case 2:
                                                soldiers += shurimaPower;
                                                Console.ForegroundColor = ConsoleColor.Blue;
                                                Console.WriteLine($"{enemyChamp} использует {wAbilityEnemy} и призывает {shurimaPower} солдат. Теперь у него {soldiers} солдат(а/ов)");
                                                Console.ForegroundColor = ConsoleColor.White;
                                                break;
                                            case 3:
                                                if (spiritsHelp > 0)
                                                {
                                                    spiritsHelp -= 1;
                                                    Console.ForegroundColor = ConsoleColor.Magenta;
                                                    Console.WriteLine($"Azir говорит что-то невнятное о Шуриме. Один дух (ваши заряды) испугался и убежал :(. Теперь у вас {spiritsHelp} духов");
