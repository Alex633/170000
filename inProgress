using System;

namespace _170000Courses
{
    internal class Program
    {
        static void Main(string[] args)
        {
            //rewrite russian abilities
            //rewrite eng damage done
            //other localization

            string input;
            int ahriHP = 40;
            int azirHP = 100;
            int enemyHP = 0;
            int playerHP = 0;
            int round = 0;
            int enemyAbility = 0;
            int localization = 0;
            bool isLocalizationSelected = false;

            int champSelection;
            bool isChampSelected = false;
            string playerChamp = "";
            string enemyChamp = "";
            string lockIn = "no";
            string abilitySelection = "";


