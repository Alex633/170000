using System;

namespace _170000Courses
{
    internal class Program
    {
        static void Main(string[] args)
        {
            //r damage doesnt work
            //r damage with e x2
            //r cooldown
            //rewrite abilities with numbers
            // enemy if <50hp heal
            //heal on r
            // descr on r with heal and cooldown

            string input;
            int ahriHP = 35;
            int azirHP = 100;
            int enemyHP = 0;
            int playerHP = 0;
            int round = 0;
            int enemyAbility = 0;
            int localization = 0;
            bool isLocalizationSelected = false;

            int champSelection;
            bool isChampSelected = false;
            string playerChamp = "";
            string enemyChamp = "";
            string lockIn = "no";
            string abilitySelection = "";


            string playerAbilities = "";
            string azirAbilitiesEN = "Azir abilities:" +
                            "\n(Q) CONQUERING SANDS: All soldiers deal 8 damage" +
                            "\n(W) ARISE!: Summon a Soldier" +
                            "\n(E) SHIFTING SANDS: Atleast 1 soldier has to be on the battle. Heals for 10 damage. All soldiers deal 4 damage. Can't be used next 3 rounds" +
                            "\n(R) EMPEROR'S DEVIDE: Deal 10 damage. Stun enemy for 2 rounds" +
                            "\n\nBUT AZIR IS NOT READY SO DON'T PICK HIM OR YOU'll BREAK EVERYTHING\n";


            //player abilities
            string qAbility = "";
            string wAbility = "";
            string eAbility = "";
            string rAbility = "";
            string stacks = "";

            int qAbilityDmg1 = 1;
            int qAbilityDmg2 = 3;
            int wAbilityDmg = 5;
            int eAbilityMP = 3;
            int rAbilityDmg = 50;

            //player effects
            bool isFoxFireActive = false;
            bool isCharmActive = false;
            bool isSecondTurnActive = false;
            int spiritsHelp = 0;
            int rAbilityRequirement = 3;
            int rAbilityStacks = 2;
            int rAbilityCD = 0;
            int rAbilityMaxCD = 3;
            int wTimer = 0;
            int eTimer = 0;

            //player stats and abilities naming
            playerHP = ahriHP;
            qAbility = "ORB OF DECEPTION (Q)";
            wAbility = "FOX FIRE (W)";
            eAbility = "CHARM (E)";
            rAbility = "SPIRIT RUSH (R)";
            stacks = "SPIRIT'S HELP";

            //enemy abilities
            string qAbilityEnemy = "";
            string wAbilityEnemy = "";
            string eAbilityEnemy = "";
            string rAbilityEnemy = "";

            //enemy effects
            int eAbilityRequirmentEnemy = 1;
            int eAbilityMaxCD = 3;
            int eAbilityCDEnemy = 0;
            int soldiers = 0;
            int shurimaPower = 1;
            int rAbilityRequirementEnemy = 4;

            //enemy stats and abilities naming
            enemyHP = azirHP;
            qAbilityEnemy = "CONQUERING SANDS (Q)";
            wAbilityEnemy = "ARISE (W)";
            eAbilityEnemy = "SHIFTING SANDS (E)";
            rAbilityEnemy = "EMPEROR'S DEVIDE (R)";



            string ahriAbilitiesEN = "\nAhri abilities:\n\n" +
