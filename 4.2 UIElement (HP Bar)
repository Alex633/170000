using System;

namespace CodingCoursesButThisTimeForFree
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string currentHPInput = "";
            double currentHPPercentage = 0;
            int currentHP = 0;
            bool isNumber = false;
            int maxHP = 50;
            int minHP = 0;
            double maxPercent = 100;

            while (!isNumber)
            {
                Console.Write("Enter HP percentage: ");
                currentHPInput = Console.ReadLine();

                if (!double.TryParse(currentHPInput, out currentHPPercentage))
                {
                    colorText("That's not a number, fool\n", ConsoleColor.Red);
                    Console.WriteLine();
                }
                else
                {
                    isNumber = true;
                    currentHPPercentage = currentHPPercentage / maxPercent * maxHP;
                    currentHP = Convert.ToInt32(currentHPPercentage);
                }

                if (currentHP > maxHP)
                {
                    currentHP = maxHP;
                }
                else if (currentHP < minHP)
                {
                    currentHP = minHP;
                }
            }

            displayHPBarAlt(currentHP, maxHP);
            displayHPBar(currentHP, maxHP);
            Console.WriteLine("");
        }

        static void displayHPBar(int currentHP, double maxHP)
        {
            Console.SetCursorPosition(0, 28);
            Console.Write("|");

            for (int i = 0; i < maxHP; i++)
            {
                Console.Write("_");
            }
            Console.Write("|");

            Console.SetCursorPosition(1, 28);
            for (int i = 0; i < currentHP; i++)
            {
                colorText("#");
            }
        }

        static void displayHPBarAlt(int currentHP, double maxHP)
        {


            Console.SetCursorPosition(0, 25);
            Console.BackgroundColor = ConsoleColor.Gray;

            for (int i = 0; i < maxHP; i++)
            {
                Console.Write(" ");
            }

            Console.SetCursorPosition(0, 25);
            Console.BackgroundColor = ConsoleColor.Red;
            for (int i = 0; i < currentHP; i++)
            {
                colorText(" ");
            }
            Console.BackgroundColor = ConsoleColor.Black;
            Console.SetCursorPosition(22, 26);
            Console.WriteLine($"{currentHP} / {maxHP}");
        }

        static void colorText(string text, ConsoleColor color = ConsoleColor.Red)
        {
            Console.ForegroundColor = color;
            Console.Write(text);
            Console.ForegroundColor = ConsoleColor.White;
        }
    }
}
