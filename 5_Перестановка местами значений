using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace _170000Courses
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string name;
            string family;
            string i = "0";
            Console.WriteLine("Tell me your name. And your last name after that");
            name = Console.ReadLine();
            family = Console.ReadLine();
            Console.WriteLine($"{name} that's not your name, silly. That's your last name. Let me show you");
            i = name;
            name = family;
            family = i;
            Console.WriteLine($"You are {name} {family}. And don't even argue with me");
        }
    }
}
