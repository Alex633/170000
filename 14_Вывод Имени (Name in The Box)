using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace _170000Courses
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string name;
            char character;
            string nameString = "";

            int edgeStringLength;

            Console.WriteLine("Name please");
            name = Console.ReadLine();
            Console.WriteLine("Symbol Now");
            character = Convert.ToChar(Console.ReadLine());

            nameString = ($"{character}{name}{character}");

            edgeStringLength = nameString.Length;
            for (int i = 0; i < edgeStringLength; i++)
            {
                Console.Write(character);
            }

            Console.WriteLine($"\n{nameString}");

            for (int i = 0; i < edgeStringLength; i++)
            {
                Console.Write(character);
            }
        }
    }
}
