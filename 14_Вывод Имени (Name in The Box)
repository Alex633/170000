using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace _170000Courses
{
    internal class Program
    {
        static void Main(string[] args)
        {
            char character;
            string nameString = "";
            string symbolString = "";

            int symbolStringLength;

            Console.WriteLine("Name please");
            nameString = Console.ReadLine();
            Console.WriteLine("Symbol Now");
            character = Convert.ToChar(Console.ReadLine());

            symbolStringLength = nameString.Length + 2;

            for (int i = 0; i < symbolStringLength; i++)
            {
                symbolString += character;
            }

            Console.WriteLine(symbolString);
            Console.WriteLine(character + nameString + character);
            Console.WriteLine(symbolString);
        }
    }
}
